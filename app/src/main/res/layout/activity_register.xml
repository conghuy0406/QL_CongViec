<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lined_paper_background"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:fontFamily="@font/coiny"
                android:textColor="#61916F"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Full Name -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_register_fullname"
                    android:fontFamily="@font/coiny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:drawableStart="@android:drawable/ic_menu_edit"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>

            <!-- Email -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_register_email"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/coiny"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>

            <!-- Username -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_register_username"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/coiny"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>

            <!-- Password -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/et_register_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/coiny"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:drawableStart="@android:drawable/ic_lock_lock"
                        android:drawablePadding="8dp"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/iv_toggle_password"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="Toggle Password Visibility"
                        android:padding="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Confirm Password -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/et_register_confirm_password"
                        android:fontFamily="@font/coiny"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:drawableStart="@android:drawable/ic_lock_lock"
                        android:drawablePadding="8dp"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/iv_toggle_confirm_password"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="Toggle Confirm Password Visibility"
                        android:padding="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Register Button -->
            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/coiny"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                app:cornerRadius="8dp" />

            <!-- Already have account -->
            <TextView
                android:id="@+id/tv_go_login"
                android:layout_width="wrap_content"
                android:fontFamily="@font/coiny"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textColor="#5B607C"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>